<Window x:Class="Piecework_wage_management_system.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Piecework_wage_management_system"
        mc:Ignorable="d"
        Title="计件工资管理系统" Height="460" Width="380" ResizeMode="NoResize" Background="LightYellow">
    <Grid>
        <Label x:Name="lblWelcome" Content="欢迎使用计件工资管理系统！" HorizontalAlignment="Left" Margin="30,35,0,0" VerticalAlignment="Top" Height="65" Width="315" FontSize="24"/>
        <Button x:Name="btnReckonByPiece" Content="计件" HorizontalAlignment="Left" Margin="105,130,0,0" VerticalAlignment="Top" Width="160" Height="50" FontSize="22" Background="LightGreen" Click="btnReckonByThePiece_Click"/>
        <Button x:Name="btnTrackRecord" Content="业绩查询" HorizontalAlignment="Left" Margin="105,215,0,0" VerticalAlignment="Top" Width="160" Height="50" FontSize="22" Background="LightBlue" Click="btnTrackRecord_Click"/>
        <Button x:Name="btnAdministratorLogin" Content="管理员登录" HorizontalAlignment="Left" Margin="105,300,0,0" VerticalAlignment="Top" Width="160" Height="50" FontSize="22" Background="#FFFF4242" Click="btnAdministratorLogin_Click"/>
    </Grid>
</Window>
